# Server Config
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ai_bot_db?schema=public"

# JWT Auth
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WEBHOOK_BASE_URL=https://your-webhook-url.com

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_default_voice_id

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@your-domain.com

# N8N Integration
N8N_API_KEY=your_n8n_api_key_for_secure_communication
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.com/webhook
N8N_INSTANCE_URL=https://your-n8n-instance.com

# Voice Cloning (Free Service)
VOICE_CLONING_API_KEY=your_voice_cloning_api_key
VOICE_CLONING_BASE_URL=https://api.voice-cloning-service.com

# n8n Webhooks
N8N_WEBHOOK_CALL=https://your-n8n-instance.com/webhook/call
N8N_WEBHOOK_EMAIL=https://your-n8n-instance.com/webhook/email

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_BASIC=price_xxxxxxxxxxxx
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxx

# Frontend URLs
FRONTEND_URL=https://saas-ai-automation.onrender.com
FRONTEND_URL=http://localhost:5000
DASHBOARD_URL=http://localhost:5000/dashboard
